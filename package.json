{
  "name": "righttechcentre-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Right Tech Centre - React Frontend",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "CI=false react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css,scss,ts,tsx,json,md}\"",
    "audit:fix": "npm audit fix --force",
    "prepare": "husky install"
  },
  "keywords": [
    "react",
    "education",
    "tech",
    "elearning"
  ],
  "author": "Right Tech Centre",
  "license": "MIT",
  "dependencies": {
    "@sentry/react": "^7.91.0",
    "aos": "^2.3.4",
    "axios": "^1.6.0",
    "i18next": "^23.7.6",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-http-backend": "^2.2.1",
    "lodash.debounce": "^4.0.8",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-i18next": "^13.5.0",
    "react-google-recaptcha-v3": "^1.10.1",
    "react-router-dom": "^6.14.0",
    "react-helmet-async": "^1.3.0",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.9",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.3",
    "eslint-plugin-react-hooks": "^4.6.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "web-vitals": "^3.5.0"
  },
  "engines": {
    "node": ">=18.0.0 <=20.x",
    "npm": ">=10.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
